<% provide :title, 'Регистрация' %>
<h1>Регистрация</h1>
<%= form_for(@user) do |f| %>

    <%= render 'shared/error_messages' %>

    <div class="field">
      <%= f.label :name, 'Имя' %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :email, 'Email' %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password, 'Пароль' %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Повторите пароль" %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="field">
      <%= f.submit "Зарегистрироваться" %>
    </div>

<% end %>
